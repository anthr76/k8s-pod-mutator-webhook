{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    "deploy/helm": {
      "release-type": "helm",
      "component": "k8s-pod-mutator-webhook-helm"
    },
    ".": {
      "component": "k8s-pod-mutator-webhook",
      "exclude-paths": ["deploy/helm"]
    }
  },
  "release-type": "go",
  "extra-files": [
    {
      "type": "yaml",
      "path": "deploy/helm/Chart.yaml",
      "jsonpath": "$.appVersion"
    }
  ],
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "k8s-pod-mutator-webhook-group",
      "components": [
        "k8s-pod-mutator-webhook", "k8s-pod-mutator-webhook-helm"
      ],
      "merge": false
    }
  ]
}
